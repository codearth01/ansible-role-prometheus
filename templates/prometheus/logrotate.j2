{{ prometheus_log_path }}/{{ prometheus_log_file }} {
  daily
  sharedscripts
  notifempty
  missingok
  rotate 7
  size 500M
  compress
  delaycompress
  create 664 {{ prometheus_user }} {{ prometheus_group }}
  postrotate
        {% if ansible_service_mgr == "init" %}[ ! -f /var/run/prometheus.pid ] || service prometheus restart{% else %}[ ! -f /run/prometheus.pid ] || systemctl restart prometheus.service{% endif %}
  endscript
}
